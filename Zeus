local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Função para aplicar o costume
local function aplicarCostume(nomeCostume)
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local costume = game.ServerStorage.Costumes:FindFirstChild(nomeCostume)
    
    -- Limpar roupas antigas (caso já tenha algo no personagem)
    for _, v in pairs(character:GetChildren()) do
        if v:IsA("Accessory") or v:IsA("Shirt") or v:IsA("Pants") then
            v:Destroy()
        end
    end
    
    -- Clonar o novo costume para o personagem
    if costume then
        costume:Clone().Parent = character
    end
end

-- Botões do menu para escolher o costume
script.Parent.BtnCostume1.MouseButton1Click:Connect(function()
    aplicarCostume("Costume1")  -- Substitua pelo nome do modelo que você criou
end)

script.Parent.BtnCostume2.MouseButton1Click:Connect(function()
    aplicarCostume("Costume2")
end)

