-- Script de Administração para Roblox (Open-source)
-- Definindo variáveis e serviços
local Players = game:GetService("Players")
local Admins = {"AdminPlayer1", "AdminPlayer2"} -- Lista de jogadores com permissões de Admin

-- Função para verificar se o jogador tem permissão de Admin
local function isAdmin(player)
    for _, admin in ipairs(Admins) do
        if player.Name == admin then
            return true
        end
    end
    return false
end

-- Comando de Kick (expulsar jogador)
game.ReplicatedStorage.OnChat.OnServerEvent:Connect(function(player, message)
    if isAdmin(player) then
        local args = message:split(" ")
        if args[1] == "/kick" and args[2] then
            local targetPlayer = Players:FindFirstChild(args[2])
            if targetPlayer then
                targetPlayer:Kick("Você foi expulso por um administrador.")
                print(player.Name .. " kickou " .. targetPlayer.Name)
            end
        end
    end
end)

-- Comando de Ban (banir jogador)
game.ReplicatedStorage.OnChat.OnServerEvent:Connect(function(player, message)
    if isAdmin(player) then
        local args = message:split(" ")
        if args[1] == "/ban" and args[2] then
            local targetPlayer = Players:FindFirstChild(args[2])
            if targetPlayer then
                -- Aqui você pode implementar o banimento mais permanente, como registrar no banco de dados
                targetPlayer:Kick("Você foi banido por um administrador.")
                print(player.Name .. " baniu " .. targetPlayer.Name)
            end
        end
    end
end)

-- Comando de Teleporte
game.ReplicatedStorage.OnChat.OnServerEvent:Connect(function(player, message)
    if isAdmin(player) then
        local args = message:split(" ")
        if args[1] == "/tp" and args[2] then
            local targetPlayer = Players:FindFirstChild(args[2])
            if targetPlayer then
                player.Character:SetPrimaryPartCFrame(targetPlayer.Character.HumanoidRootPart.CFrame)
                print(player.Name .. " teleportou para " .. targetPlayer.Name)
            end
        end
    end
end)

-- Comando de Adicionar Admin
game.ReplicatedStorage.OnChat.OnServerEvent:Connect(function(player, message)
    if isAdmin(player) then
        local args = message:split(" ")
        if args[1] == "/addadmin" and args[2] then
            table.insert(Admins, args[2])
            print(player.Name .. " adicionou " .. args[2] .. " como Admin")
        end
    end
end)
                
