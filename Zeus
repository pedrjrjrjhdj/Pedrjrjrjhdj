repeat wait() until game:IsLoaded()

local Lighting = game:GetService("Lighting")
local HttpService = game:GetService("HttpService")
local TPS = game:GetService("TeleportService")
local Players = game:GetService("Players")

-- Verifica se é lua cheia e noite ainda no começo
local function isFullMoonStarting()
	local moon = Lighting:FindFirstChild("Sky"):GetAttribute("MoonPhase")
	local time = tonumber(Lighting.ClockTime)
	return moon == "FullMoon" and time >= 18 and time <= 19.5
end

-- Server hop
local function serverHop()
	local req = syn and syn.request or http_request or request
	local body = req({
		Url = "https://games.roblox.com/v1/games/2753915549/servers/Public?sortOrder=Desc&limit=100",
		Method = "GET"
	})
	local data = HttpService:JSONDecode(body.Body)

	for _, v in pairs(data.data) do
		if v.playing < v.maxPlayers then
			TPS:TeleportToPlaceInstance(game.PlaceId, v.id, Players.LocalPlayer)
			wait(3)
		end
	end
end

-- Início
if isFullMoonStarting() then
	warn("Lua cheia visível e recém-começada! Aproveita!")
else
	warn("Lua cheia não no início. Hoppando...")
	serverHop()
end
