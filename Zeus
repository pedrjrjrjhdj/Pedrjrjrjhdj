local player = game.Players.LocalPlayer
local gamePassId = 12345678  -- Substitua com o ID do seu Game Pass

-- Verifica se o jogador tem o Game Pass
local function temGamePass()
    return player:HasGamePass(gamePassId)
end

-- Comprar o Game Pass (simula a compra)
local function comprarGamePass()
    if not temGamePass() then
        -- Código para simular compra (se o jogador não tem)
        print("Você não tem o Game Pass! Compra agora!")
        -- Aqui você pode pedir para o jogador comprar o Game Pass através de uma interface de compra do Roblox
    else
        print("Você já tem esse Game Pass!")
    end
end

-- Conectar ao evento de botão (por exemplo, se houver um botão de compra no menu)
script.Parent.MouseButton1Click:Connect(comprarGamePass)
